{% extends '@SyliusAdmin/layout.html.twig' %}

{% import '@SyliusAdmin/Macro/breadcrumb.html.twig' as breadcrumb %}

{% block title %}{{ 'mango_contact_form_plugin.ui.detailTitle'|trans ({'%customerName%': message.customerDescriptor }) }}{% endblock %}

{% block content %}
    <div class="ui stackable one column grid">
        <div class="column">
            <h1 class="ui header">
                <i class="circular comments icon"></i>
                <div class="content">
                    {{ 'mango_contact_form_plugin.ui.title'|trans }}
                    <div class="sub header">{{ 'mango_contact_form_plugin.ui.subtitle'|trans }}</div>
                </div>
            </h1>

            {% set breadcrumbs = [
                { label: 'sylius.ui.administration'|trans, url: path('sylius_admin_dashboard') },
                { label: 'mango_contact_form_plugin.ui.title'|trans, url: path('mango_contact_form_plugin_admin_message_index') },
                { label: message.customerDescriptor },
            ] %}

            {{ breadcrumb.crumble(breadcrumbs) }}
        </div>

        <div class="column">
            <div class="ui comments">
                <div class="ui segment">
                    <div class="comment">
                        <div class="content">
                            <span class="author">
                                {{ 'mango_contact_form_plugin.admin.show.custommer'|trans }}:
                                <br>
                                {{ message.customerDescriptor }}
                            </span>

                            <div class="metadata">
                                <span class="date">{{ message.createdAt|date }}</span>
                            </div>

                            <br/><br/>

                            <div class="text">{{ message.message }}</div>
                        </div>
                    </div>
                </div>

                {% if answers %}
                    {% for answer in answers %}
                        <div class="ui segment">
                            <div class="comment messageAnswer">
                                <div class="content">
                                    <span class="author">
                                        {% if answer.adminUser %}
                                            {{ 'mango_contact_form_plugin.admin.show.admin'|trans }}:
                                            <br>
                                            {{ answer.adminUser.username }}
                                        {% else %}
                                            {{ 'mango_contact_form_plugin.admin.show.custommer'|trans }}:
                                            <br>
                                            {{ message.customerDescriptor }}
                                        {% endif %}
                                    </span>

                                    <div class="metadata">
                                        <span class="date">{{ answer.createdAt|date }}</span>
                                    </div>

                                    <br/><br/>

                                    <div class="text">{{ answer.message }}</div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}

                <div class="ui segment">
                    <h4 class="ui dividing header">{{ 'mango_contact_form_plugin.title.answer'|trans }}</h4>
                    <div class="ui form">
                        {{ form_start(form, {'attr': {'class': 'ui reply form'}}) }}
                        <div class="field">
                            {{ form_row(form.message) }}
                        </div>
                        <button type="submit" class="ui blue labeled submit icon button" id="formSubmitButton">
                            <i class="icon edit"></i> {{ 'mango_contact_form_plugin.admin.form.submitButton'|trans }}
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
